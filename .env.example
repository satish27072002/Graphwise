# ─────────────────────────────────────────────
# CodeGraph Navigator — Environment Variables
# Copy this file to .env and fill in the values
# NEVER commit .env to version control
# ─────────────────────────────────────────────

# OpenAI API key — get from https://platform.openai.com/api-keys
OPENAI_API_KEY=

# Neo4j connection URI
# Local (no Docker):  bolt://localhost:7687
# Docker Compose:     bolt://neo4j:7687
NEO4J_URI=bolt://localhost:7687

# Neo4j credentials (set when starting Neo4j)
NEO4J_USER=neo4j
NEO4J_PASSWORD=

# Frontend API base URL
# Local development:  http://localhost:8000
# Azure VM deploy:    http://<VM_PUBLIC_IP>:8000
NEXT_PUBLIC_API_URL=http://localhost:8000

# Azure VM public IP (used only in docker-compose.deploy.yml)
AZURE_VM_IP=
